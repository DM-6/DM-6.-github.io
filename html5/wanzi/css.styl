base-color = #152131

body 
 font-size 20px

body,div
 margin 0
 padding 0
 background #ffef5e

.border
 border 1px solid base-color
 
.main
 position relative
 width 700px
 margin 50px auto
 
.wanzi
 position absolute
 top 250px
 left 100px
 z-index 10

 .hairs
  background base-color
  width 190px
  height 250px
  left -30px
  top -50px
  position absolute
  border-radius 50% 50% 0 0
  overflow hidden

  &:before
    content ''
  &:after
    content ''
    position absolute
    width 300px
    height 200px
    background #ffef5e
    top 120px

  .hair
   width 35px
   height 45px
   background base-color
   position absolute
   z-index 1
   transform rotate(70deg) scale(1) skew(44deg) translate(8px)

   &.hair1
    top 17px
    left 27px
   &.hair2
    top 8px
    left 52px
   &.hair3
    top 4px
    left 73px
   &.hair4
    top 0
    left 90px
   &.hair5
    top 4px
    left 108px
   &.hair6
    top 8px
    left 125px
   &.hair7
    top 17px
    right 17px

 .face
  background #fbdac7
  width 130px
  height 100px
  position absolute
  top 0
  border-radius 20px 20px 50px 50px
  border 1px solid black
  &:after
    content ''
    width 14px
    height 10px
    background #fbdac7
    position absolute
    bottom -12px
    left 50%
    margin-left -7px
    border 1px solid black

  .brow
    width 42px
    height 2px
    background base-color
    position absolute
    top 26px
    border-radius 50%
    &.left-brow
      left 18px
      transform rotate(-10deg)
    &.right-brow
      right 14px
      transform rotate(10deg)
    
  .eye
   width 14px
   height 14px
   background base-color
   position absolute
   border-radius 50%
   top 40px
   z-index 2
   &.left-eye
     left 32%
   &.right-eye
     right 32%

  .blusher
   width 15px
   height 15px
   background #F79D99
   position absolute
   border-radius 50%
   top 70px
   z-index 2
   &.left-blusher
     left 8%
   &.right-blusher
     right 8%

  .mouth
   width 30px
   height 20px
   background red
   position absolute
   border-radius 50%
   border 1px solid black
   top 60px
   left 50px
   z-index 1
   &:after
    content ''
    position absolute
    width 60px
    height 20px
    background #fbdac7
    top -10px
    left -20px
  .ear
   width 10px
   height 20px
   background #fbdac7
   position absolute
   top 30px
   z-index 2
   &.left-ear
     left -11px
     border-radius 5px 0 0 10px
   &.right-ear
     right -11px
     border-radius 0 5px 10px 0
  
 .clothes
  background #fff
  width 70px
  height 80px
  position absolute
  top 112px
  left 31px
  z-index 2
  border-radius 30% 30% 10px 10px
  overflow hidden
 
  .sleeve
   background #fff
   width 40px
   height 40px
   position absolute
   top 10px
   border-radius 10px

  .collar
   z-index 3
   position absolute
   width 20px
   height 10px
   background #fff
   border 1px solid black
   &.left-collar
     left 12px
     transform rotate(50deg)
   &.right-collar
     right 12px
     transform rotate(-50deg) 

  .straps
   z-index 2
   position absolute
   width 6px
   height 100px
   background #e9003a
   &.left-straps
     left 12px
   &.right-straps
     right 12px

 .arm
   width 70px
   height 70px
   border-radius 50%
   background #fff
   z-index 1
   position absolute
   top 115px
   z-index 0
   &.left-arm
     left 10px
     &:after
       content ''
       position absolute
       background #ffef5e
       width 60px
       height 60px
       left 12px
       top 5px
       border-radius 50%
   &.right-arm
     left 52px
     &:after
       content ''
       position absolute
       background #ffef5e
       width 60px
       height 60px
       left -4px
       top 5px
       border-radius 50%
 
 .belt
   background #ed023a
   border 1px solid #152131
   height 10px
   left 31px
   position absolute
   top 182px
   width 70px
   z-index 3

 .skirt
   background #ed023a
   position absolute
   background none 
   border-color #e9003a transparent
   border-image none
   border-width 0px 30px 50px
   height 0
   left 1px
   position absolute
   top 194px
   width 72px
   z-index 3
   border-radius 0 0 50% 50%
   .line
     width 1px
     height 30px
     position absolute
     background #000
     top 10px
     transform-origin 0 0
     &.line1
       left 10px
       transform rotate(20deg)
     &.line2
       left 25px
       transform rotate(10deg)
     &.line3
       left 35px
     &.line4
       right 25px
       transform rotate(-10deg)
     &.line5
       right 35px
       transform rotate(-20deg)

 .leg
   width 12px
   height 40px
   background #fadbc7
   .border
     position absolute
     top 220px
     z-index 2
     &.left-leg
       left 40px
     &.right-leg
       left 78px
     &:after
       content ''
       width 12px
       height 16px
       background #fff
       .border
         border-bottom 0
         top 40px
         left -1px
         position absolute

 .stockings
   width 28px
   height 12px
   background #fff 
   .border
     position absolute
     z-index 1
     transform-origin 0 0
     &.left-stockings
       left 21px
       top 275px
       transform rotate(-20deg)
       border-radius 50% 0 0 50% 
     &.right-stockings
       left 83px
       top 265px
       transform rotate(20deg)
       border-radius 0 50% 50% 0
      
 .shoes
   width 40px
   height 17px
   position absolute
   z-index 0
   background #a23030
   transform-origin 0 0
   border-radius 50%
   &.left-shoes
     left 13px
     top 280px
     transform rotate(-20deg)
     border-radius 50% 0 0 50% 
   &.right-shoes
     left 81px
     top 267px
     transform rotate(20deg)
     border-radius 0 50% 50% 0




    